{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/*",
    "build/"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
  },
  "watch": [
    "src/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts, js, json",
  "exec": "ts-node --project=tsconfig.json src/index.ts"
}